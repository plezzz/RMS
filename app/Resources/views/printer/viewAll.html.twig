{% extends 'base.html.twig' %}

{% block main %}
    <div id="content" class="content">
        <!-- begin breadcrumb -->
        <ol class="breadcrumb pull-right">
            <li class="breadcrumb-item"><a href="javascript:">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:">Printer</a></li>
            <li class="breadcrumb-item active">All Printers</li>
        </ol>
        <!-- end breadcrumb -->
        <!-- begin page-header -->
        <h1 class="page-header">All printers <small>from begin to now</small></h1>
        <!-- end page-header -->
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <!-- begin panel-heading -->
            <!-- begin row -->
            <div class="row">
                <!-- begin col-10 -->
                <div class="col-lg-12">
                    <!-- begin panel -->
                    <div class="panel panel-inverse">
                        <!-- begin panel-body -->
                        <div class="panel-body">
                            <table id="data-table-buttons" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th class="text-nowrap">Date Added</th>
                                    <th class="text-nowrap">Batch</th>
                                    <th class="text-nowrap">Company</th>
                                    <th class="text-nowrap">Image</th>
                                    <th class="text-nowrap">Model</th>
                                    <th class="text-nowrap">Problem Description</th>
                                    <th class="text-nowrap">Invoice Description</th>
                                    <th class="text-nowrap">Technician</th>
                                    <th class="text-nowrap">Action</th>
                                    <th class="text-nowrap">Price</th>
                                    <th class="text-nowrap">Cartridge</th>
                                    <th class="text-nowrap">Counter</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for printer in printers %}
                                    <tr>
                                        <td> {{ printer.dateAdded|date("d.m.Y H:i") }}</td>
                                        <td> P{{ printer.batch }}</td>
                                        <td>  {{ printer.companyName }}</td>
                                        <td class="with-img"><img src="{{ asset('images/models/') }}{{ printer.model.image }}"
                                                                  alt="{{ printer.model }}"
                                                                  class="img-rounded height-80"/></td>
                                        <td> {{ printer.model }}</td>
                                        <td> {{ printer.problemDescription }}</td>
                                        <td> {{ printer.invoiceDescription }}</td>
                                        <td> {{ printer.technician }}</td>
                                        <td>
                                            <a href="{{ path('printer_view', {'id': printer.id}) }}"><button  type="button" class="btn btn-success">View</button></a>
                                            <a href="{{ path('printer_edit', {'id': printer.id}) }}"><button  type="button" class="btn btn-lime">Edit</button></a>
                                        </td>
                                        <td> {{ printer.customerPrice }}</td>
                                        <td> {{ printer.cartridge }}</td>
                                        <td> {{ printer.counter }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- end panel-body -->
                    </div>
                    <!-- end panel -->
                </div>
                <!-- end col-10 -->
            </div>
            <!-- end row -->
            <!-- end panel-body -->
        </div>
        <!-- end panel -->
    </div>
    <!-- end #content -->
{% endblock %}

