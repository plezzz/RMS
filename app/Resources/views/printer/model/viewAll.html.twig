{% extends 'base.html.twig' %}

{% block main %}
    <div id="content" class="content">
        <!-- begin breadcrumb -->
        <ol class="breadcrumb pull-right">
            <li class="breadcrumb-item"><a href="javascript:">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:">Printer</a></li>
            <li class="breadcrumb-item active">All Models</li>
        </ol>
        <!-- end breadcrumb -->
        <!-- begin page-header -->
        <h1 class="page-header">All models</h1>
        <!-- end page-header -->
        <div class="panel-body" style="background: #FFFFFF">
            <table id="data-table-default" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th class="text-nowrap">Date Added</th>
                    <th class="text-nowrap">Image</th>
                    <th class="text-nowrap">Model</th>
                    <th class="text-nowrap">Added By</th>
                    <th class="text-nowrap">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for model in models %}
                    <tr>
                        <td> {{ model.dateAdded|date("d.m.Y H:i") }}</td>
                        <td class="with-img"><img src="{{ asset('images/models/') }}{{ model.image }}"
                                                  alt="{{ model.name }}"
                                                  class="img-rounded height-80"/></td>
                        <td> {{ model.brand }} {{model.name }}</td>
                        <td> {{model.userAdded }}</td>
                        <td>
                            <a href="{{ path('model_view', {'id': model.id}) }}">
                                <button type="button" class="btn btn-success">View</button>
                            </a>
                            <a href="{{ path('model_edit', {'id': model.id}) }}">
                                <button type="button" class="btn btn-lime">Edit</button>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="pagination">
                {{ knp_pagination_render(models) }}
            </div>
        </div>
    </div>
    <!-- end #content -->
{% endblock %}

